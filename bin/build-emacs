#!/bin/sh

set -e

if [ -d ~/Programs/Emacs/git ]
then
    cd ~/Programs/Emacs/git
    git pull --rebase
else
    git clone --depth 1 git://git.savannah.gnu.org/emacs.git ~/Programs/Emacs/git
    cd ~/Programs/Emacs/git
fi

if [ -f Makefile ]
then
    make distclean
fi

find -name '*.elc' -exec rm {} \;
if [ ! -f configure ]
then
    ./autogen.sh
fi

if [ -f ~/.build-emacs.conf ]
then
    . ~/.build-emacs.conf
fi

./configure $CONFIGURE_OPTIONS
make bootstrap
